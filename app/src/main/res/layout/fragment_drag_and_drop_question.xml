<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="firstName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="@dimen/dimen_24"
            android:layout_height="@dimen/dimen_24"
            android:layout_marginTop="@dimen/dimen_32"
            android:layout_marginEnd="@dimen/dimen_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_left_mdpi"
            app:tint="@color/colorTextPurple" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_32"
            android:text="@{firstName ?? @string/name}"
            android:textColor="@color/colorTextPurple"
            android:textSize="@dimen/font_size_16"
            app:layout_constraintBottom_toBottomOf="@id/back_img"
            app:layout_constraintStart_toStartOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dimen_24"
            android:background="@drawable/rectangle_purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintVertical_bias="1.0">

            <TextView
                android:id="@+id/home_work_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_16"
                android:text="title home work"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lesson_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/dimen_32"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/home_work_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/home_work_title" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/dimen_32"
                android:layout_marginTop="@dimen/dimen_24"
                android:background="@color/white"
                app:layout_constraintTop_toBottomOf="@+id/home_work_title" />

            <TextView
                android:id="@+id/question_number"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:layout_marginTop="8dp"
                android:background="@color/white"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@id/divider"
                app:layout_constraintTop_toBottomOf="@+id/divider"
                tools:text="1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="start"
                android:text="@string/question"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@id/divider"
                app:layout_constraintStart_toStartOf="@id/divider"
                app:layout_constraintTop_toBottomOf="@id/question_number" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/rl_container"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_layout"
                app:layout_constraintTop_toBottomOf="@id/question">

                <ImageView
                    android:id="@+id/item1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:src="@drawable/kiwi_fruit_kiwi"
                    app:layout_constraintBottom_toBottomOf="@+id/rl_bucket"
                    app:layout_constraintEnd_toStartOf="@+id/rl_bucket"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rl_bucket"
                    android:layout_marginBottom="@dimen/dimen_16"/>

                <ImageView
                    android:id="@+id/item2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/item1"
                    app:layout_constraintStart_toEndOf="@+id/item1"
                    tools:src="@drawable/angoor"
                    android:layout_marginStart="-8dp"
                    android:layout_marginBottom="40dp"/>

                <ImageView
                    android:id="@+id/item3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/item2"
                    app:layout_constraintEnd_toStartOf="@+id/item4"
                    app:layout_constraintStart_toEndOf="@+id/item2"
                    tools:src="@drawable/pears" />

                <ImageView
                    android:id="@+id/item4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toEndOf="@+id/rl_bucket"
                    app:layout_constraintTop_toBottomOf="@+id/item3"
                    tools:src="@drawable/watermelon" />

                <ImageView
                    android:id="@+id/item5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@+id/item4"
                    app:layout_constraintTop_toBottomOf="@+id/item4"
                    tools:src="@drawable/orange_fruit_vi"
                    android:layout_marginTop="40dp"/>

                <ImageView
                    android:id="@+id/item6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/item5"
                    app:layout_constraintTop_toBottomOf="@+id/item5"
                    tools:src="@drawable/red_strawberrie"
                    android:layout_marginTop="-8dp"
                    android:layout_marginEnd="@dimen/dimen_32"/>

                <ImageView
                    android:id="@+id/item7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/item6"
                    app:layout_constraintEnd_toStartOf="@+id/item6"
                    app:layout_constraintStart_toStartOf="@+id/item1"
                    tools:src="@drawable/apple_eat_fruit" />

                <RelativeLayout
                    android:id="@+id/rl_bucket"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/img_bucket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:foregroundGravity="center"
                        tools:src="@drawable/ic_sabad" />

                    <ImageView
                        android:id="@+id/item11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/kiwi_fruit_kiwi"
                        tools:visibility="visible" />

                    <ImageView
                        android:id="@+id/item22"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="-60dp"
                        android:layout_toEndOf="@id/item11"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/angoor"
                        tools:visibility="visible" />
                    <ImageView
                        android:id="@+id/item33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginStart="-60dp"
                        android:layout_toEndOf="@id/item22"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/pears"
                        tools:visibility="visible" />
                    <ImageView
                        android:id="@+id/item44"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginStart="-60dp"
                        android:layout_toEndOf="@id/item33"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/watermelon"
                        tools:visibility="visible" />
                    <ImageView
                        android:id="@+id/item55"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_16"
                        android:layout_marginStart="-60dp"
                        android:layout_toEndOf="@id/item44"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/orange_fruit_vi"
                        tools:visibility="visible" />
                    <ImageView
                        android:id="@+id/item66"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:layout_marginStart="-60dp"
                        android:layout_toEndOf="@id/item55"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/red_strawberrie"
                        tools:visibility="visible" />
                    <ImageView
                        android:id="@+id/item77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="-60dp"
                        android:layout_toEndOf="@id/item66"
                        android:rotation="90"
                        android:visibility="invisible"
                        tools:src="@drawable/apple_eat_fruit"
                        tools:visibility="visible" />
                </RelativeLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dimen_24"
                android:layout_marginTop="@dimen/dimen_24"
                android:layout_marginBottom="@dimen/dimen_32"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/check_dictation_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_64"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:background="@drawable/background_button_common"
                    android:gravity="center"
                    android:text="@string/next_question"
                    android:textColor="@color/colorTextBlue"
                    android:textSize="@dimen/font_size_14" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>