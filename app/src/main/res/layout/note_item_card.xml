<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:padding="@dimen/dimen_16"
    android:id="@+id/card_root">


    <TextView
        android:id="@+id/tv_note_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="نام"
        android:textSize="24sp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_note_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="سلام متن اصلی ام"
        android:textSize="20sp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_name" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24/8/98"
        android:textSize="14sp"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_text" />

    <Button
        android:id="@+id/btn_stuff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintEnd_toStartOf="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_text" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/tv_note_text"
        app:layout_constraintTop_toBottomOf="@+id/tv_note_text"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
        android:padding="4dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>